<div class="container">
  <div class="row　no-gutters">
    <div class="col-sm-12">

      <h2>ジャンル編集</h2>

      <% if @post_genre.errors.any? %>
        <div id="error_explanation" data-turbo-cache="false" class="alert alert-danger" role="alert">
          <h3 class="alert-heading"><%= @post_genre.errors.count %>件のエラーがあります。</h3>
          <ul>
            <% @post_genre.errors.full_messages.each do |message| %>
          <li class="list-unstyled"><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @post_genre, url: admin_post_genre_path(@post_genre) do |f| %>
        <div class="form-group">
          <%= f.label :投稿ジャンル名 %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "完了", class: "btn btn-success", "data-disable-with": "Update User" %>
        </div>
      <% end %>

      <%= link_to 'Back', "/admin/post_genres" %>

    </div>
  </div>
</div>

