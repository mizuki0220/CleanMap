<div class="container">
  <div class="row no-gutters">
    <div class="col-sm-12">
      <h2 class="text-center">投稿ジャンルの追加</h2>
      <%= form_with model: @post_genre, url: admin_post_genres_path, local: true do |f| %>
        <div class="form_input">
          <%= f.label :投稿ジャンル名 %>
          <%= f.text_field :name, class:"form-control" %>
        </div>
        <div class="text-center pb-5">
          <%= f.submit "登録する", class: "btn btn-lg btn-info mt-4" %>
        </div>
      <% end %>

      <h2 class="text-center pb-3">投稿ジャンル一覧</h2>
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>投稿ジャンル名</th>
            <th>編集</th>
            <th>削除</th>
          </tr>
          </thead>
          <tbody>
            <% @post_genres.each do |post_genre| %>
            <tr>
              <td><%= post_genre.name %></td>
              <td><%= link_to '編集', edit_admin_post_genre_path(post_genre.id), class: 'btn btn-success' %></td>
              <td><%= link_to '削除', admin_post_genre_path(post_genre.id), method: :delete, "data-confirm" => "本当に削除しますか?", class: "btn btn-danger" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>
