<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 col-md-offset-2">
      <h2 class="text-center border-bottom border-secondary">編集</h2>
      
      <% if @post.errors.any? %>
        <ul class="alert alert-danger" role="alert">
          <h6 class="alert-heading">
            <%= @post.errors.count %>件のエラーが発生しました
          </h6>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>


      <%= form_with model: @post do |f| %>
        <div class="form-group">
          <%= f.label :題名 %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :内容 %>
          <%= f.text_area :body, class: "form-control" %>
        </div>

        <div class="form-group mb-5">
        <%= f.label :画像 %><br>
        <%= f.file_field :images, multiple: true, id: 'list_images' %>
        <%= f.file_field :images, multiple: true, id: 'list_images', class: "mt-3" %>
        <%= f.file_field :images, multiple: true, id: 'list_images', class: "mt-3" %>
        </div>

        <div class="text-center mb-3">
          <%= f.submit "保存", class: "btn btn-secondary", "data-disable-with": "Update User" %>
        </div>
      <% end %>
      <div class="text-center mb-4">
      <%= link_to "戻る", post_path(@post.id) %>
      </div>
    </div>
  </div>
</div>
