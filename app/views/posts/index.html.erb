<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-md-offset-2">
          <h2 class="text-center border-bottom border-secondary"><%= @genre %>Posts</h2>
          <% @posts.each do |post| %>
            <div>
              <% if post.images.attached? %>
                <% post.images.each do |image| %>
                  <%= image_tag image, size: "100x100" %> <br>
                <% end %>
              <% else %>
                <%= image_tag 'no_image', size: "100x100" %><br>
              <% end %>
              <h4><%= link_to post.title, post_path(post) %></h4>
              <h5><%= post.body %></h5>
              <p>ジャンル:<%= link_to post.post_genre.name, posts_path(genre: post.post_genre.name) %></p>
              <p>投稿者: <%= post.user.name %></p>
              <%= post.created_at.strftime('%Y年%m月%d日') %>
            </div>
          <% end %>
        </div>
    </div>
</div>