<h2 class="text-center">POST LIST</h2>
<div class="card-list-container py-5">
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <div class="col-sm-12">
        <% @posts.each do |post| %>
            <%= attachment_image_tag post, :images, fallback: "no_image.jpg", size:'80x80', class: "card-img-top"; %>
            <div class="card-body">
              <div class="row">
                <div class="col-2">
                    <%= post.title %>
                    <%= post.body %>
                </div>
              </div>
            </div>
        <% end %>
    </div>
  </div>
</div>
