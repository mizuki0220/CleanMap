<div class="containar">
  <div class="row justify-content-center">
    <div class="col-md-7 col-md-offset-2 mb-4">
      <div class="d-flex flex-wrap pb-5">
      <% if @post.images.attached? %>
        <% @post.images.each do |image| %>
          <div class="pl-3 pt-3">
            <%= image_tag image, class: "img-fluid", size: "200x200" %>
          </div>
        <% end %>
      <% else %>
        <div class="pl-3 pt-3">
          <%= image_tag 'no_image', size: "200x200" %>
        </div>
      <% end %>
      </div>
      <div class="ml-4 mr-4 mb-3">
        <h4 class="text-break pb-2"><%= @post.title %></h4>
        <p class="text-break"><%= @post.body %></p>
        <div class="pt-4">ジャンル: <%= @genre %> / 投稿者: <%= @post.user.name %></div>
        <div><%= @post.created_at.strftime('%Y年%m月%d日') %></div>
        <div>コメント件数：<%= @post.comments.count %></div>
      </div>
      <% if @user.id == current_user.id %>
        <div class="ml-4 mr-4 mb-3">
          <%= link_to "編集", edit_post_path(@post.id), class: "btn btn-secondary" %>
          <%= link_to "削除", post_path(@post.id), class: "btn btn-danger ml-3", method: :delete, "data-confirm" => "本当に削除しますか？" %>
        </div>
      <% end %>

      <div class="ml-4 mb-3 mt-5">
        <h3>コメント</h3>
        <% @post.comments.each do |comment| %>
        <div class="card mb-3">
          <div class="card-header"><%= comment.user.name %> さん</div>
          <div class="card-body">
            <blockquote class="blockquote mb-0">
              <p><%= comment.comment %></p>
              <footer class="blockquote-footer"><%= comment.created_at.strftime('%Y年%m月%d日') %></footer>
            </blockquote>
          </div>
        </div>
        <% end %>
      </div>

      <div class="ml-4">
        <%= form_with model: [@post, @comment] do |f| %>
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %><br>
          <%= f.submit "送信する" %>
        <% end %>
      </div>
    </div>
  </div>
</div>